@using Microsoft.JSInterop
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime



<div class="container-fluid bg-darkestgrey" style="width: 100%;">
	<div class="container-fluid text-center">
		<a href="/">
			<img src="/images/VV-3_vectorV2.png" alt="Logo" class="img-fluid" style="max-width: 300px;" />
		</a>
	</div>

	<div class="container-fluid text-center text-white">
		<p style="font-weight:bold; font-size:20px" id="paragraph1">
			Strengthen your organization's cybersecurity with our expert-led training.
		</p>
		<p style="font-weight:bold; font-size:20px; color:#212121;" id="paragraph2">
			Receive personalized guidance from industry experts to tackle any digital challenge
		</p>
		<p style="font-weight:bold; font-size:20px; color:#212121;" id="paragraph3">
			Join us to fortify your company's defenses and stay ahead in cybersecurity.
		</p>

	</div>
</div>

<br />
<div class="container">
	<div class="col-sm ">
		<h4 class="space-grotesk">Fortify your organization's Cyber Resilience with our specialized, expert-led training programs.</h4>
		<p>
			In today's digital age, where cyber threats loom large, it's crucial to arm your company with the best defense strategies. Our training courses are meticulously designed to empower your team with the knowledge and skills needed to safeguard your digital assets.
			Through our comprehensive training, your employees will learn to identify potential cyber threats, implement effective security measures, and respond swiftly and effectively to breaches. We offer a blend of theoretical knowledge and practical exercises, ensuring a deep understanding of cybersecurity principles and their real-world applications.
			Our experts, with extensive experience in the field of cybersecurity, provide personalized guidance, adapting the training to your specific business needs. This ensures that your team is not just prepared, but proactive in facing digital challenges.
			Join us and transform your team into a cybersecurity fortress. With our training, you don't just respond to threats – you anticipate and neutralize them. Dare to be unbreakable and fortify your company's digital defenses with us.
		</p>
	</div>
	<div class="row justify-content-center">
		<div class="w-100 h-25"></div>
		<div class="col-sm text-center">
			<div>
				<h3> Join us now to ensure your safety! </h3>
				<button type="submit" class="btn btn-lg btn-dark custom-border mx-auto" @onclick="NavigateToRegister">Register</button>
			</div>
		</div>
		<div class="col-sm text-center">
			<div>
				<h3> Login to do the course! </h3>
				<button type="submit" class="btn btn-lg btn-dark custom-border mx-auto" @onclick="NavigateToLogin">Login</button>
			</div>
		</div>
		
		
	</div>
</div>

<style>
	.container-fluid {
		padding-right: 0;
		padding-left: 0;
	}

	.navbar {
		margin-bottom: 0px !important;
	}

	.align-items-center {
		align-items: normal !important;
	}

	article.w-50 {
		width: auto !important;
		padding-left: 0px !important;
		padding-right: 0px !important;
	}
</style>


@code {
	private void NavigateToRegister()
	{
			NavigationManager.NavigateTo("/Account/Register");
	}


	private void NavigateToLogin()
	{
		NavigationManager.NavigateTo("/Account/Login");
	}

	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		if (firstRender)
		{
			await JSRuntime.InvokeVoidAsync("showParagraph", "paragraph1");

			await Task.Delay(500); // Wait for 2 seconds before showing the next paragraph
			await JSRuntime.InvokeVoidAsync("showParagraph", "paragraph2");

			await Task.Delay(500); // Wait for 2 seconds before showing the next paragraph
			await JSRuntime.InvokeVoidAsync("showParagraph", "paragraph3");
		}
	}
}

<script>
	window.showParagraph = function (id) {
		var paragraph = document.getElementById(id);
		if (paragraph) {
			paragraph.style.color = "#fff";
		}
	};
</script>
